						<li><button onclick="setTheme('cupcake')" class="justify-start">ğŸ§ Cupcake</button></li>
						<li><button onclick="setTheme('bumblebee')" class="justify-start">ğŸ Bumblebee</button></li>
						<li><button onclick="setTheme('emerald')" class="justify-start">ğŸ’š Emerald</button></li>
						<li><button onclick="setTheme('corporate')" class="justify-start">ğŸ¢ Corporate</button></li>
						<li><button onclick="setTheme('synthwave')" class="justify-start">ğŸŒˆ Synthwave</button></li>
						<li><button onclick="setTheme('cyberpunk')" class="justify-start">ğŸ¤– Cyberpunk</button></li>
						<li><button onclick="setTheme('valentine')" class="justify-start">ğŸ’ Valentine</button></li>
						<li><button onclick="setTheme('dracula')" class="justify-start">ğŸ§› Dracula</button></li>
						<li><button onclick="setTheme('whalio')" class="justify-start">ğŸ‹ Whalio</button></li>
